{
  "manifest_version": 3,
  "name": "LeetCode AI Assistant",
  "version": "1.0.0",
  "description": "Adds an AI assistant button to help with coding problems",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.maang.in/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.maang.in/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "chatbot.html",
        "chatbot.js",
        "style.css",
        "script.js",
        "highlight.min.js",
        "marked.min.js"
      ],
      "matches": ["*://*.maang.in/*"]
    }
  ]
}
